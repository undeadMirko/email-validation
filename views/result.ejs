<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <h1>Resultados de Validaci√≥n</h1>

    <h2>Aprobados</h2>
    <% if (results.approved.length > 0) { %>
        <ul>
            <% results.approved.forEach(email => { %>
                <li><%= email %></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No hay correos aprobados.</p>
    <% } %>

    <h2>No Aprobados</h2>
    <% if (results.notApproved.length > 0) { %>
        <ul>
            <% results.notApproved.forEach(email => { %>
                <li><%= email %></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No hay correos no aprobados.</p>
    <% } %>

    <h2>Correos Rebotados</h2>
    <% if (results.bouncing.length > 0) { %>
        <ul>
            <% results.bouncing.forEach(email => { %>
                <li><%= email %></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No hay correos rebotados.</p>
    <% } %>
</body>
</html>
