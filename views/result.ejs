<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <h1>Resultados de Validaci√≥n</h1>

    <h2>Aprobados</h2>
    <ul>
        <% results.approved.forEach(email => { %>
            <li><%= email %></li>
        <% }); %>
    </ul>

    <h2>No Aprobados</h2>
    <ul>
        <% results.notApproved.forEach(email => { %>
            <li><%= email %></li>
        <% }); %>
    </ul>

    <h2>Correos Rebotados</h2>
    <ul>
        <% results.bouncing.forEach(email => { %>
            <li><%= email %></li>
        <% }); %>
    </ul>

    <button onclick="window.location.href='/email/read-bounced';">Validar Correos Rebotados</button>
    <button onclick="window.location.href='/email/export';">Exportar Resultados</button>
</body>
</html>
